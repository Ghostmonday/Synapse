{
  "title": "Sinaps MVP Dashboard",
  "panels": [
    {
      "title": "HTTP Request Rate",
      "type": "graph",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "rate(http_requests_total[5m])", "legendFormat": "{{method}} - {{path}}", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "title": "Telemetry Event Rate",
      "type": "graph",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "rate(telemetry_events_total[5m])", "legendFormat": "{{event}}", "refId": "A" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "title": "System Health",
      "type": "graph",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "up", "legendFormat": "{{job}}", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    }
  ]
}

