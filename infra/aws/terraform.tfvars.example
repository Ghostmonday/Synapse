# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security

aws_region  = "us-east-1"
environment = "dev"
project_name = "sinapse"

# Instance configuration
instance_type  = "t3.medium"
instance_count = 1

# Database configuration
create_rds        = true
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_username       = "sinapse"
db_password       = "CHANGE_ME_SECURE_PASSWORD"

# Or use external database
# create_rds = false
# external_db_host = "your-postgres-host:5432"

# Redis configuration
create_redis    = true
redis_node_type = "cache.t3.micro"
redis_num_nodes = 1

# Or use external Redis
# create_redis = false
# external_redis_host = "your-redis-host"
# external_redis_port = 6379

# Load Balancer
create_alb = false  # Set to true for production

# Security
allowed_ssh_cidrs = ["0.0.0.0/0"]  # Restrict this in production!

# Application
github_repo = "https://github.com/Ghostmonday/Synapse.git"

